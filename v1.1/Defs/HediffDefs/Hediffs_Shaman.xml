<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <HediffDef>
    <defName>TM_EnrageHD</defName>
	<hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(.8, 0, 0)</defaultLabelColor>
    <label>Enrage</label>
	<description>Transforms a pawn into a nearly unstoppable, berserk monster. Enrage enhances melee; ranged weapons will be discarded.</description>
	<scenarioCanAdd>false</scenarioCanAdd>
	<makesSickThought>false</makesSickThought>
	<tendable>false</tendable>
    <makesAlert>false</makesAlert>
	<maxSeverity>1</maxSeverity>
	<isBad>false</isBad>
    <stages>
	  <li>
        <label></label>
        <minSeverity>.5</minSeverity>
      </li>
    </stages>
  </HediffDef>

  <HediffDef>
    <defName>TM_HexHD</defName>
	<hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(.6, .4, 0)</defaultLabelColor>
    <label>Hexed</label>
	<description>Under the effects of a hex.</description>
	<scenarioCanAdd>false</scenarioCanAdd>
	<makesSickThought>false</makesSickThought>
	<tendable>false</tendable>
    <makesAlert>false</makesAlert>
	<maxSeverity>1.0</maxSeverity>
	<isBad>true</isBad>
	<comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-5</severityPerDay>
      </li>
    </comps>
    <stages>
      <li>
        <label></label>
        <minSeverity>0.01</minSeverity>
      </li>      
    </stages>
  </HediffDef>
  
  
</Defs>